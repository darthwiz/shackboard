<%=javascript_include_tag :defaults%>
<div id="navbar_top">
  <%=render :partial => '/users/login_box'%>
  <div class="spacer"></div>
</div>
<div id="main">
  <%=
    form_remote_tag :url => {
      :action => url_for(:controller => 'smiley', :action => 'edit')
    }
  %>
    <table class="themed">
      <tr>
        <th class="header">Codice</td>
        <th class="header">URL</td>
        <th class="header">Immagine</td>
        <th class="header">Azione</td>
      </tr>
      <%if @smileys.empty?%>
        <tr>
          <td class="bg0" align="center" colspan="4">
            Non ci sono smiley personalizzati.
          </td>
        </tr>
      <%else%>
        <%@smileys.each do |sm|%>
        <tr id="smiley_<%=sm.id%>">
          <%=render :partial => 'smiley', :locals => { :sm => sm }%>
        </tr>
        <%end%>
      <%end%>
    </table>
  </form>
  <br/>
  <%=render :partial => 'smiley_new'%>
</div>
