<ul>
  <li class="forum_name"><h3>si parla di...</h3></li>
  <li>
    <%=@popular_tags.collect { |i| link_to_tag_search(i.tag) }.join(', ')%>
  </li>
  <% forums.each do |i| %>
  <li class="forum_name">
    <%=link_image_to i[:image], base_url + i[:forum].to_s if i[:image]%>
    <h3><%=link_to cleanup(i[:name]), forum_path(i[:forum])%></h3>
  </li>
  <li style="padding-top: 0;">
    <%= render :partial => '/forum/latest_topics',
               :locals  => { :id          => i[:forum],
                             :n           => i[:ntopics],
                             :include_sub => i[:include_sub] } %>
  </li>
  <% end %>
</ul>
