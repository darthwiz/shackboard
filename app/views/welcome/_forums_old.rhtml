<%
  base_url = '/portale/forum/forumdisplay.php?fid='
  forums = []
  Forum.find(25).children.each do |f|
    forums << {
      :name        => strip_tags(f.name),
      :forum       => f.id,
      :ntopics     => 5,
      :include_sub => true,
    }
  end
%><%=
  render :partial => '/welcome/forums_content_old',
         :locals  => { :forums => forums, :base_url => base_url }
%>
