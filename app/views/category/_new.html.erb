<%# vim: set ft=eruby nowrap: -%>
<%if @user == @blog.user%>
<div id="new_category_form" style="display: none;">
  <%userid = @user ? @user.id : nil
    remote_form_for Category.new,
    :url => { :controller   => :category,
              :action       => :create } do |f|%>
    <fieldset>
      <p>
        Nome: <%=f.text_field :name, :size => 18%>
      </p>
      <p>
        URL: <%=f.text_field :label, :size => 10%>
      </p>
      <%=f.hidden_field :owner_class, :value => @blog.class%>
      <%=f.hidden_field :owner_id,    :value => @blog.id%>
      <%=f.submit 'Crea'%>
    </fieldset>
  <%end%>
</div>
<%=link_to_function 'nuova categoria', :id => 'new_category_link' do |page|
  page[:new_category_link].hide
  page[:new_category_form].show
end%>
<%end%>
