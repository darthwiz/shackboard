<% t = Theme.find_by_name(@theme_name) || Theme.new %>
/* Theme: <%=t.name.inspect if t%> */
<%=render :partial => '/layouts/main_css', :locals => { :t => t } %>
<%=render :partial => '/login/login_box_css', :locals => { :t => t } %>
a, a:visited {<%#{{{%>
  color: <%=t.link%>;
}<%#}}}%>
.vmid {<%#{{{%>
  display: table-cell;
  vertical-align: middle;
}<%#}}}%>
/* header {{{ */
h1 {
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}
div#notification_bar {
  margin-top: .5em;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: .5em;
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  padding: 1em;
}
/* }}} */
/* navbars {{{ */
div#navbar_top, div#navbar_bottom {
  margin-left: 2em;
  margin-right: 2em;
}
div.navbar {
  padding: .5em;
  background-color: <%=t.header%>;
  border: 1px solid <%=t.bordercolor%>;
  margin-top: .5em;
}
div.page_trail {
  float: left;
}
div.upload {
  float: right;
}
div.search {
  float: right;
  margin-left: 1em;
}
span.current_page {
  color: <%=t.headertext%>;
  font-weight: bold;
}
/* }}} */
/* file list page {{{ */
div#files {
  margin-top: .5em;
  margin-left: 2em;
  margin-right: 2em;
  margin-bottom: .5em;
}
table.file_list {
  background-color: <%=t.bordercolor%>;
  font-family: Verdana, Arial, sans-serif;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}
table.file_list tr.header td {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  font-weight: bold;
}
table.file_list tr.header a {
  display: block;
  color: <%=t.headertext%>;
  padding-left: .2em;
  padding-right: .2em;
}
table.file_list tr.header a:hover {
  background-color: blue;
  color: yellow;
  text-decoration: none;
}
table.file_list tr td {
  background-color: <%=t.altbg1%>;
  color: <%=t.text%>;
}
div.filesize {
  font-size: <%=t.altfontsize%>;
  float: right;
  margin-left: .5em;
}
/* }}} */
/* category page {{{ */
div#file_categories {
  margin-top: .5em;
  margin-left: 2em;
  margin-right: 2em;
  margin-bottom: .5em;
}
table.file_categories {
  background-color: <%=t.bordercolor%>;
  font-family: Verdana, Arial, sans-serif;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}
td.cat_name_header, td.cat_count_header {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  font-weight: bold;
}
td.cat_name {
  background-color: <%=t.altbg1%>;
  color: <%=t.text%>;
}
td.cat_count {
  background-color: <%=t.altbg2%>;
  color: <%=t.text%>;
  text-align: center;
  width: 4em;
}
/* }}} */
/* license confirmation page {{{ */
div#file_license {
  margin-top: .5em;
  margin-left: 2em;
  margin-right: 2em;
  margin-bottom: .5em;
}
div.file_license_filename, div.file_license_name, div.file_license_text,
div.file_license_buttons {
  border: 1px solid <%=t.bordercolor%>;
  padding: .7em;
  margin-top: 1em;
}
div.file_license_filename, div.file_license_text, div.file_license_buttons {
  background-color: <%=t.altbg1%>;
  color: <%=t.text%>;
}
div.file_license_name {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  font-weight: bold;
}
/* }}} */
/* file review page {{{ */
div#file_review {
  margin-top: .5em;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: .5em;
}
table.file_review {
  background-color: <%=t.bordercolor%>;
  font-family: Verdana, Arial, sans-serif;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}
table.file_review tr.header td {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  font-weight: bold;
}
table.file_review tr td {
  background-color: <%=t.altbg1%>;
  color: <%=t.text%>;
}
/* }}} */
/* file search page {{{ */
div#file_search {
  margin-top: .5em;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: .5em;
}
div#search_form {
  background-color: <%=t.altbg1%>;
  color: <%=t.text%>;
  padding: 1em;
  border: 1px solid <%=t.bordercolor%>;
}
h2 {
  margin: 0;
}
/* }}} */
/* file upload page {{{ */
div#file_upload {
  margin-top: .5em;
  margin-left: 2em;
  margin-right: 2em;
  margin-bottom: .5em;
  background-color: <%=t.altbg1%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 1.5em;
}
div#file_upload table {
  margin-top: 1em;
}
/* }}} */
/* authentication required {{{ */
div#auth_required {
  margin-top: .5em;
  margin-left: 20px;
  margin-right: 20px;
  margin-bottom: .5em;
  background-color: <%=t.altbg1%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 1.5em;
}
/* }}} */
/* search results page {{{ */
div#file_search_results {
  margin-top: .5em;
  margin-left: 2em;
  margin-right: 2em;
  margin-bottom: .5em;
}
div#results {
  background-color: <%=t.altbg1%>;
  color: <%=t.text%>;
  padding: 1em;
  border: 1px solid <%=t.bordercolor%>;
  margin-bottom: .5em;
}
h2 {
  margin: 0;
}
/* }}} */
/* footer {{{ */
div#footer {
  margin-top: 2em;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 1em;
  padding: 1em;
  text-align: center;
}
/* }}} */
div.spacer {<%#{{{%>
  clear: both;
}<%#}}}%>
a, a:visited {<%#{{{%>
  text-decoration: none;
  color: <%=t.link%>;
}<%#}}}%>
a:hover {<%#{{{%>
  text-decoration: underline;
}<%#}}}%>
