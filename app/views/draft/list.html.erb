<%flip = 0 unless flip%>
<%@page_title = "Bozze di #{h(@user.username)}"%>
<%=javascript_include_tag :defaults%>
<div id="navbar_top">
  <%=render :partial => '/login/login_box'%>
  <div class="spacer"></div>
</div>
<div id="drafts">
  <div class="title_bar">
    <%=page_trail%> <%=page_seq%>
  </div>
  <table id="draft_list">
    <%@drafts.each do |dr|%>
    <%=render :partial => 'draft', :locals => { :draft => dr, :flip => flip }%>
    <%flip = 1 - flip%>
    <%end%>
  </table>
  <div class="title_bar">
    <%=page_trail%> <%=page_seq%>
  </div>
</div>
