/* <%t = @theme%> */
/* -------------------- general -------------------- */
body {
  color: <%=t.text%>;
  background-color: <%=t.bgcolor%>;
  font-size: 13px;
  font-family: Verdana, sans-serif;
}
dl, ul {
  margin: 0px; /* needed for IE6 */
}
a, a.visited {
  color: <%=t.link%>;
  text-decoration: none;
}
a:hover {
  text-decoration: none;
}
div.spacer {
  clear: both;
}
div#main { /* defines the page's margins globally */
  margin-left: auto;
  margin-right: auto;
  width: 97%;
  margin-top: 1em;
  margin-bottom: 0.5em;
}
div#forum div.quote {
  font-size: 90%;
  background-color: <%=t.bgcolor%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.7em;
  -moz-border-radius: 5px;
}
div#forum div.quote div.quote div.quote {
  display: none;
}

/* legacy layout tables */
.navtd {
  font-size: <%=t.altfontsize%>;
  font-family: <%=t.font%>;
  color: <%=t.headertext%>;
  background-color: <%=t.header%>;
  text-decoration: none;
}
table.themed {
  background-color: <%=t.bordercolor%>;
}
table.themed td.top {
  background-color: <%=t.top%>;
}

/* FORUM-SPECIFIC                           */
/* ======================================== */
div#forum div#content_box {
  position: relative;
}
div#forum div#content_box { /* this is where the main content goes */
  position: relative;
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  padding-top: 0.6em;
  padding-left: 1em;
  padding-right: 1em;
}
div#forum div.breadcrumbs,
div#forum div.breadcrumbs_bottom {
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-top: 0.5em;
  margin-bottom: 1em;
  top: 0.4em;
  -moz-border-radius: 5px;
}
div#forum div.breadcrumbs span.current_page,
div#forum div.breadcrumbs_bottom span.current_page {
  font-weight: bold;
}


/* NEW PM-SPECIFIC                          */
/* ======================================== */

div#new_pm {
  overflow: auto;
}
div#new_pm div#headers,
div#new_pm div#preview,
div#new_pm div#message,
div#new_pm div#smiley_list {
  background-color: white;
  -moz-border-radius: 7px;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-top: 0.5em;
  margin-bottom: 1em;
}
div#new_pm h3 {
  margin: 0em;
  font-size: 14px;
  font-family: "Trebuchet MS", "Verdana", sans-serif;
}
div#new_pm div#headers ul {
  list-style: none;
  margin: 0;
  padding: 0;
}
div#new_pm div#headers ul li {
  height: 2em;
  line-height: 2em;
}
div#new_pm div#headers div.label {
  float: left;
  clear: left;
  width: 5em;
}
div#new_pm div#headers div.field {
  float: left;
  clear: right;
}
div#new_pm div h3 {
  margin-bottom: 0.5em;
}
div#new_pm div#pm_preview {
  height: 16em;
  overflow: auto;
}

div#new_pm div.input_area {
  width: 100%;
}
div#new_pm div#message {
  float: left;
  width: 65%;
}
div#new_pm div#message textarea {
  width: 95%;
  border: 1px solid #e0e0e0;
  padding: 0.5em;
}
div#new_pm div#smiley_list {
  float: right;
  width: 30%;
}
div#new_pm div#smiley_list ul {
  margin: 1em 0px 0px 0px;
  padding: 0px;
  list-style: none;
}
div#new_pm div#smiley_list img {
  max-height: 20px;
  max-width: 4.5em;
}
div#new_pm div#smiley_list ul li {
  width: 5em;
  height: 22px;
  padding-top: 2px;
  overflow: hidden;
  text-align: center;
  float: left;
}


/* PM-SPECIFIC                              */
/* ======================================== */

div#forum div#pms div.controls {
  text-align: right;
  height: 1.8em;
  clear: both;
  margin-bottom: 0.3em;
}
div#forum div#pms div.controls a {
  height: 1.8em;
  line-height: 1.8em;
  border: 1px solid <%=t.bordercolor%>;
  clear: both;
  background-color: <%=t.altbg2%>;
  -moz-border-radius: 3px;
  padding: 0.05em 0.5em 0.1em 0.5em;
}
div#forum div#pms div.controls a:hover {
  background-color: blue;
  color: yellow;
}
div#forum div#pms div.hidden_line {
}
div#forum div#pms div.pm {
}
div#forum div#pms dl,
div#forum div#pms dt,
div#forum div#pms dd {
  margin: 0px;
  padding: 0px;
}
div#forum div#pms ul {
  list-style: none;
  padding: 0px;
}
div#forum div#pms ul li {
  clear: both;
}
div#forum div#pms div.pm {
  float: left;
  clear: both;
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-top: 1em;
  margin-bottom: 1em;
  overflow: auto;
  -moz-border-radius: 5px;
}
div#forum div#pms div.pm div.author {
  float: left;
  width: 130px;
  border-right: 1px solid <%=t.bordercolor%>;
  overflow: hidden;
}
div#forum div#pms div.pm div.message {
  margin-left: 130px;
  padding-left: 1em;
  padding-bottom: 4em;
  border-left: 1px solid <%=t.bordercolor%>;
}
div#forum div#pms div.pm img.avatar {
  width: 120px;
  margin-top: 0.4em;
  margin-bottom: 0.4em;
}
div#forum div#pms div.pm dt.username span.label,
div#forum div#pms div.pm dd.status span.label {
  display: none;
}
div#forum div#pms div.pm dt.username span.value {
  font-weight: bold;
}
div#forum div#pms div.pm dd.status, 
div#forum div#pms div.pm dd.post_count,
div#forum div#pms div.pm dd.reg_date,
div#forum div#pms div.pm dd.personal {
  font-size: 11px;
}

div#forum div#pms div.message dd.date {
  border-bottom: 1px solid <%=t.bordercolor%>;
  margin-left: -1em;
  padding-left: 1em;
  padding-bottom: 0.3em;
  margin-bottom: 0.5em;
}
div#forum div#pms div.message dd.subject {
  float: left;
  font-weight: bold;
  padding-right: 1em;
}
div#forum div#pms div.message dd.subject span.label {
  display: none;
}
div#forum div#pms div.message dd.signature {
  font-size: 12px;
  color: <%=t.text%>;
  font-style: italic;
  margin-top: 2em;
  margin-right: 2em;
  -moz-border-radius: 3px;
}
div#forum div#pms div.pm  {
  position: relative;
  clear: right;
}
div#forum div#pms div.pm div.operations {
  position: absolute;
  bottom: 0.5em;
  right: 0.5em;
  padding: 0.4em;
  background-color: <%=t.altbg1%>;
  border: 1px solid <%=t.bordercolor%>;
  -moz-border-radius: 5px;
  font-size: 11px;
}
div#forum div#pms div.operations a {
  padding-left: 0.5em;
  padding-right: 0.5em;
}
div#forum div#pms div.hidden_line {
  background-color: <%=t.altbg2%>;
  overflow: hidden;
  padding: 0.1em 0.2em 0.1em 0.2em;
  border: 1px solid <%=t.bordercolor%>;
  margin-top: -1px;
  height: 1.6em;
  line-height: 1.6em;
}
div#forum div#pms div.hidden_line:hover {
  background-color: <%=t.altbg1%>;
}
div#forum div#pms div.hidden_line dt {
  float: left;
  width: 130px;
  padding-left: 0.5em;
}
div#forum div#pms div.hidden_line dd.subject {
  float: left;
}
div#forum div#pms div.hidden_line dd.date {
  float: right;
  padding-right: 0.5em;
}
div#forum div#pms div.hidden_line span.label {
  display: none;
}
div#forum div#pms div.msg_new div.hidden_line dd.subject {
  font-weight: bold;
}


/* DRAFT-SPECIFIC                           */
/* ======================================== */
div#forum div#drafts ul {
  list-style: none;
  padding: 0px;
}
div#forum div#drafts li {
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  margin-top: -1px;
  position: relative;
  overflow: auto;
}
div#forum div#drafts li dl {
  position: relative;
  height: 1.8em;
  line-height: 1.8em;
}
div#forum div#drafts li dt.title {
  position: absolute;
  left: 0.5em;
}
div#forum div#drafts li dd.time {
  position: absolute;
  width: 10em;
  right: 4em;
}
div#forum div#drafts li dd.delete {
  position: absolute;
  text-align: center;
  width: 4em;
  right: 0em;
}
div#forum div#drafts li dd.delete a {
  display: block;
  padding-left: 0.2em;
  padding-right: 0.2em;
}
div#forum div#drafts li dd.delete a:hover {
  background-color: red;
  color: white;
}
div#forum div#drafts li.empty_list {
  text-align: center;
  padding-top: 4em;
  padding-bottom: 4em;
}


