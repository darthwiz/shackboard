/* <%t = @theme%> */
/* -------------------- general -------------------- */
body {
  color: <%=t.text%>;
  background-color: <%=t.bgcolor%>;
  font-size: 13px;
  font-family: Verdana, sans-serif;
}
dl, ul {
  margin: 0px; /* needed for IE6 */
}
a {
  text-decoration: none;
}
a:visited {
  color: blue;
}
a:hover {
  text-decoration: none;
}
div.spacer {
  clear: both;
}
div#main { /* defines the page's margins globally */
  margin-left: auto;
  margin-right: auto;
  width: 97%;
  margin-top: 1em;
  margin-bottom: 0.5em;
}
div#main a {
  text-decoration: none;
}
div#portal div#header {
  background: url(http://img216.imageshack.us/img216/1609/logosbur4.png);
  background-repeat: no-repeat;
  height: 120px;
  position: relative;
}
div#title h1, div#title span.tagline { /* these are replaced by images */
  width: 0px;
  height: 0px;
  display: block;
  overflow: hidden;
}
div#portal div#content_box { /* this is where the main content goes */
  /* background: url(studentibicocca/stripes_orange.png); */
  background-color: #ff9900;
  border: 1px solid black;
  -moz-border-radius: 10px;
  padding-top: 2.5em;
  margin-top: 3px;
  overflow: auto;
}

/* -------------------- login box -------------------- */
div#login_box h2 {
  display: none;
}
div#login_box {
  position: absolute;
  right: 0px;
  top: 0px;
  font-size: 11px;
  float: right;
  background-color: yellow;
  border: 1px solid #d05000;
  z-index: 10;
  overflow: hidden;
  -moz-border-radius: 5px;
}
div#login_box input {
  font-size: 11px;
}
div#login_box input.button {
  border: 1px solid black;
  width: 10ex;
}
div#not_logged_in {
  text-align: center;
}
div#login_inputs {
  margin-top: 0.3em;
  margin-left: 0.3em;
  margin-right: 0.3em;
}
div#login_inputs input.text,
div#login_inputs input.password {
  width: 7em;
  border: 1px solid black;
}
div#personal div.welcome {
  padding-top: 0.3em;
  padding-left: 0.3em;
  padding-right: 0.3em;
  clear: both;
}
div#search {
  text-align: right;
  padding-left: 0.3em;
  padding-right: 0.3em;
  padding-bottom: 0.3em;
  clear: both;
  white-space: nowrap;
}
div#search input.text {
  width: 14.3em;
  border: 1px solid black;
}
div#register_link {
  line-height: 2em;
}
div.welcome {
  float: left;
  clear: left;
}
div.logout {
  float: right;
  clear: right;
  margin-right: 1em;
}
div.logout button {
  font-size: 8px;
}

/* -------------------- navigation menu -------------------- */
div#navigation h2 {
  display: none;
}
div#portal div#navigation ul {
  padding: 0px;
  margin: -1px;
}
div#portal div#navigation {
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 0;
  padding-bottom: 0;
  margin-left: 2em;
}
div#portal div#navigation ul {
  list-style: none;
  padding: 0;
}
div#portal div#navigation li {
  margin-right: 0.1em;
}
div#portal div#navigation ul li {
  font-family: "Trebuchet MS", sans-serif;
  font-size: 14px;
  font-weight: bold;
