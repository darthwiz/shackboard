/* auto-generated theme: <%t = @theme%><%=t.name%> */
/* -------------------- general -------------------- */
body {
  color: <%=t.text%>;
  background-color: <%=t.bgcolor%>;
  font-size: 13px;
  font-family: Verdana, sans-serif;
}
/* -------------------- legacy forum -------------------- */
td.header {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  font-family: Verdana, sans-serif;
  font-size: 10px;
  font-weight: bold;
}
span.postauthor {
  font-family: Verdana, sans-serif;
  font-size: 13px;
  font-weight: bold;
}
.maxpostwidth {
  max-width: 45em;
}
div.signature {
  line-height: 1.2em;
  max-height: 7.3em;
  overflow: hidden;
}
.c3 {
  text-align: center;
}
div.page-seq {
  margin-top: 1em;
  margin-bottom: 1em;
  text-align: center;
}
div.page-seq a,
div.page-seq span.current {
  margin-left: 0.2em;
  margin-right: 0.2em;
  padding: 0.2em 0.6em;
  background-color: <%=t.altbg1%>;
}
div.page-seq a {
  border: 1px solid <%=t.link%>;
}
div.page-seq a:hover {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
}
div.page-seq span.current {
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
}
div.maxpostwidth img {
  max-width: 700px;
}
/* ---------------------------------------- */
dl, ul {
  margin: 0px; /* needed for IE6 */
}
a, a.visited {
  color: <%=t.link%>;
  text-decoration: none;
}
a:hover {
  text-decoration: none;
}
div.spacer {
  clear: both;
}
div#main { /* defines the page's margins globally */
  margin-left: auto;
  margin-right: auto;
  max-width: 980px;
  margin-bottom: 0.5em;
}
#blogs, #forum, #page-header {
  margin: 1em;
}
div#forum div.quote,
div#blogs div.quote {
  font-size: 90%;
  background-color: <%=t.bgcolor%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.7em;
}
div#forum div.quote div.quote div.quote {
  display: none;
}

/* legacy layout tables */
.navtd {
  font-size: <%=t.altfontsize%>;
  font-family: <%=t.font%>;
  color: <%=t.headertext%>;
  background-color: <%=t.header%>;
  text-decoration: none;
}
table.themed {
  background-color: <%=t.bordercolor%>;
}
table.themed td.top,
table.themed th {
  background-color: <%=t.top%>;
}
table.themed td.themed {
  background-color: <%=t.altbg1%>;
  font-family: Verdana, sans-serif;
  font-size: 13px;
}



