/* auto-generated theme: <%t = @theme%><%=t.name%> */
/* -------------------- general -------------------- */
body {
  color: <%=t.text%>;
  background-color: <%=t.bgcolor%>;
  font-size: 13px;
  font-family: Verdana, sans-serif;
}
/* -------------------- legacy forum -------------------- */
td.header {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  font-family: Verdana, sans-serif;
  font-size: 10px;
  font-weight: bold;
}
span.postauthor {
  font-family: Verdana, sans-serif;
  font-size: 13px;
  font-weight: bold;
}
.maxpostwidth {
  max-width: 45em;
}
div.signature {
  line-height: 1.2em;
  max-height: 7.3em;
  overflow: hidden;
}
.c3 {
  text-align: center;
}
div.page-seq {
  margin-top: 1em;
  margin-bottom: 1em;
  text-align: center;
}
div.page-seq a,
div.page-seq span.current {
  margin-left: 0.2em;
  margin-right: 0.2em;
  padding: 0.2em 0.6em;
  background-color: <%=t.altbg1%>;
}
div.page-seq a {
  border: 1px solid <%=t.link%>;
}
div.page-seq a:hover {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
}
div.page-seq span.current {
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
}
div.maxpostwidth img {
  max-width: 700px;
}
/* ---------------------------------------- */
dl, ul {
  margin: 0px; /* needed for IE6 */
}
a, a.visited {
  color: <%=t.link%>;
  text-decoration: none;
}
a:hover {
  text-decoration: none;
}
div.spacer {
  clear: both;
}
div#main { /* defines the page's margins globally */
  margin-left: auto;
  margin-right: auto;
  max-width: 980px;
  margin-bottom: 0.5em;
}
#blogs, #forum, #page-header {
  margin: 1em;
}
div#forum div.quote,
div#blogs div.quote {
  font-size: 90%;
  background-color: <%=t.bgcolor%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.7em;
}
div#forum div.quote div.quote div.quote {
  display: none;
}

/* legacy layout tables */
.navtd {
  font-size: <%=t.altfontsize%>;
  font-family: <%=t.font%>;
  color: <%=t.headertext%>;
  background-color: <%=t.header%>;
  text-decoration: none;
}
table.themed {
  background-color: <%=t.bordercolor%>;
}
table.themed td.top,
table.themed th {
  background-color: <%=t.top%>;
}
table.themed td.themed {
  background-color: <%=t.altbg1%>;
  font-family: Verdana, sans-serif;
  font-size: 13px;
}
/* FORUM-SPECIFIC                           */
/* ======================================== */
div#forum div.post_updated {
  font-size: 11px;
  margin-top: 1.5em;
  font-style: italic;
}
div#forum div#content_box {
  position: relative;
}
div#forum div#content_box { /* this is where the main content goes */
  /* XXX removed for legacy forum */
  /* 
  position: relative;
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  padding-top: 0.6em;
  padding-left: 1em;
  padding-right: 1em;
  */
}
div#forum div.breadcrumbs,
div#forum div.breadcrumbs_bottom {
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-top: 0.5em;
  margin-bottom: 1em;
  top: 0.4em;
}
div#forum div.breadcrumbs_bottom {
  font-size: 11px;
}
div#forum div.breadcrumbs span.current_page,
div#forum div.breadcrumbs_bottom span.current_page {
  font-weight: bold;
}
div.content_box {
  background-color: <%=t.altbg2%>;
  /* background-color: #e8f0ff; */
  margin-bottom: 1em;
  border: 1px solid black;
  padding: 0.5em;
}
#moderator-panel-top {
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-bottom: 1em;
}
#topic_title {
  width: 50em;
}
#moderator-panel-top h4 {
  margin: 0;
}
#moderator-panel-options {
  margin-top: 0.5em;
}

/* NEW PM-SPECIFIC                          */
/* ======================================== */

div#new_pm,
div#new_post {
  overflow: auto;
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  padding: 1em;
}
div#new_pm div#headers,
div#new_pm div#preview,
div#new_pm div#message,
div#new_pm div#smiley_list,
div#new_pm div#format-commands,
div#new_post div#headers,
div#new_post div#preview,
div#new_post div#message,
div#new_post div#smiley_list,
div#new_post div#format-commands {
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-top: 0.5em;
  margin-bottom: 1em;
}
div#smiley_list div.smileys_link {
  clear: both;
  text-align: center;
}
div#new_pm h3,
div#new_post h3 {
  margin: 0em;
  font-size: 14px;
  font-family: "Trebuchet MS", "Verdana", sans-serif;
}
div#new_pm div#headers ul,
div#new_post div#headers ul {
  list-style: none;
  margin: 0;
  padding: 0;
}
div#new_pm div#headers ul li,
div#new_post div#headers ul li {
  height: 2em;
  line-height: 2em;
}
div#new_pm div#headers div.label,
div#new_post div#headers div.label {
  float: left;
  clear: left;
  width: 5em;
}
div#new_pm div#headers div.field,
div#new_post div#headers div.field {
  float: left;
  clear: right;
}
div#new_pm div h3,
div#new_post div h3 {
  margin-bottom: 0.5em;
}
div#new_pm div#preview,
div#new_post div#preview {
  height: 16em;
  overflow: auto;
}
div#new_pm div.input_area,
div#new_post div.input_area {
  width: 100%;
}
div#new_pm div#message,
div#new_post div#message {
  float: left;
  width: 65%;
}
div#new_pm div#message textarea,
div#new_post div#message textarea {
  width: 95%;
  border: 1px solid #e0e0e0;
  padding: 0.5em;
}
div#new_pm div#smiley_list,
div#new_pm div#format-commands,
div#new_post div#smiley_list,
div#new_post div#format-commands {
  float: right;
  width: 30%;
}
div#new_pm div#smiley_list ul,
div#new_pm div#format-commands ul,
div#new_post div#smiley_list ul,
div#new_post div#format-commands ul {
  margin: 1em 0px 0px 0px;
  padding: 0px;
  list-style: none;
}
div#new_pm div#smiley_list img,
div#new_post div#smiley_list img {
  max-height: 20px;
  max-width: 4.5em;
}
div#new_pm div#smiley_list ul li,
div#new_post div#smiley_list ul li {
  width: 5em;
  height: 22px;
  padding-top: 2px;
  overflow: hidden;
  text-align: center;
  float: left;
}
div#new_pm div#format-commands ul li,
div#new_post div#format-commands ul li {
  float: left;
  margin-right: 0.5em;
}


/* PM-SPECIFIC                              */
/* ======================================== */

div#forum div#pms div.controls {
  text-align: right;
  height: 1.8em;
  clear: both;
  margin-bottom: 0.3em;
}
div#forum div#pms div.controls a {
  height: 1.8em;
  line-height: 1.8em;
  border: 1px solid <%=t.bordercolor%>;
  clear: both;
  background-color: <%=t.altbg2%>;
  padding: 0.05em 0.5em 0.1em 0.5em;
}
div#forum div#pms div.controls a:hover {
  background-color: blue;
  color: yellow;
}
div#forum div#pms div.hidden_line {
}
div#forum div#pms div.pm {
}
div#forum div#pms dl,
div#forum div#pms dt,
div#forum div#pms dd {
  margin: 0px;
  padding: 0px;
}
div#forum div#pms ul {
  list-style: none;
  padding: 0px;
}
div#forum div#pms ul li {
  clear: both;
}
div#forum div#pms div.pm {
  float: left;
  clear: both;
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-top: 1em;
  margin-bottom: 1em;
  overflow: auto;
}
div#forum div#pms div.pm div.author {
  float: left;
  width: 130px;
  border-right: 1px solid <%=t.bordercolor%>;
  overflow: hidden;
}
div#forum div#pms div.pm div.message {
  margin-left: 130px;
  padding-left: 1em;
  padding-bottom: 4em;
  border-left: 1px solid <%=t.bordercolor%>;
}
div#forum div#pms div.pm img.avatar {
  width: 120px;
  margin-top: 0.4em;
  margin-bottom: 0.4em;
}
div#forum div#pms div.pm dt.username span.label,
div#forum div#pms div.pm dd.status span.label {
  display: none;
}
div#forum div#pms div.pm dt.username span.value {
  font-weight: bold;
}
div#forum div#pms div.pm dd.status, 
div#forum div#pms div.pm dd.post_count,
div#forum div#pms div.pm dd.reg_date,
div#forum div#pms div.pm dd.personal {
  font-size: 11px;
}

div#forum div#pms div.message dd.date {
  border-bottom: 1px solid <%=t.bordercolor%>;
  margin-left: -1em;
  padding-left: 1em;
  padding-bottom: 0.3em;
  margin-bottom: 0.5em;
}
div#forum div#pms div.message dd.subject {
  float: left;
  font-weight: bold;
  padding-right: 1em;
}
div#forum div#pms div.message dd.subject span.label {
  display: none;
}
div#forum div#pms div.message dd.signature {
  font-size: 12px;
  color: <%=t.text%>;
  font-style: italic;
  margin-top: 2em;
  margin-right: 2em;
}
div#forum div#pms div.pm  {
  position: relative;
  clear: right;
}
div#forum div#pms div.pm div.operations {
  position: absolute;
  bottom: 0.5em;
  right: 0.5em;
  padding: 0.4em;
  background-color: <%=t.altbg1%>;
  border: 1px solid <%=t.bordercolor%>;
  font-size: 11px;
}
div#forum div#pms div.operations a {
  padding-left: 0.5em;
  padding-right: 0.5em;
}
div#forum div#pms div.hidden_line {
  background-color: <%=t.altbg2%>;
  overflow: hidden;
  padding: 0.1em 0.2em 0.1em 0.2em;
  border: 1px solid <%=t.bordercolor%>;
  margin-top: -1px;
  height: 1.6em;
  line-height: 1.6em;
  position: relative;
}
div#forum div#pms div.hidden_line:hover {
  background-color: <%=t.altbg1%>;
}
div#forum div#pms div.hidden_line dt {
  float: left;
  width: 130px;
  padding-left: 0.5em;
}
div#forum div#pms div.hidden_line dd.subject {
  float: left;
}
div#forum div#pms div.hidden_line dd.date {
  position: absolute;
  right: 4.5em;
  text-align: right;
}
div#forum div#pms div.hidden_line dd.destroy {
  position: absolute;
  right: 0.5em;
}
div#forum div#pms div.hidden_line dd.destroy a:hover {
  color: white;
  background-color: red;
}
div#forum div#pms div.hidden_line span.label {
  display: none;
}
div#forum div#pms div.msg_new div.hidden_line dd.subject {
  font-weight: bold;
}


/* DRAFT-SPECIFIC                           */
/* ======================================== */
div#forum div#drafts ul {
  list-style: none;
  padding: 0px;
}
div#forum div#drafts li {
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  margin-top: -1px;
  position: relative;
  overflow: auto;
}
div#forum div#drafts li dl {
  position: relative;
  height: 1.8em;
  line-height: 1.8em;
}
div#forum div#drafts li dt.title {
  position: absolute;
  left: 0.5em;
}
div#forum div#drafts li dd.time {
  position: absolute;
  width: 10em;
  right: 4em;
}
div#forum div#drafts li dd.destroy {
  position: absolute;
  text-align: center;
  width: 4em;
  right: 0em;
}
div#forum div#drafts li dd.destroy a {
  display: block;
  padding-left: 0.2em;
  padding-right: 0.2em;
}
div#forum div#drafts li dd.destroy a:hover {
  background-color: red;
  color: white;
}
div#forum div#drafts li.empty_list {
  text-align: center;
  padding-top: 4em;
  padding-bottom: 4em;
}


/* BLOG-SPECIFIC                            */
/* ======================================== */
div#blogs div#title {
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 8;
  height: 64px;
  width: 64px;
  background-color: #ff9900;
  background: url('images/logo_button.png');
}

div#blogs div#header {
  height: 70px;
  position: relative;
}

div#blogs div#navigation {
  margin-top: 1em;
  margin-bottom: 0;
  clear: both;
  overflow: auto;
  margin-bottom: -1px;
  position: relative;
  height: 1.7em;
}
div#blogs div#navigation ul {
  list-style: none;
  margin: 0;
  padding: 0;
  position: absolute;
}
div#blogs h3 {
  font-family: "Trebuchet MS", sans-serif;
  font-size: 13px;
  margin: 0;
}
div#blogs div#navigation ul li {
  float: left;
  margin-right: 3px;
  background-color: <%=t.altbg2%>;
  border-top: 1px solid <%=t.bordercolor%>;
  border-left: 1px solid <%=t.bordercolor%>;
  border-right: 1px solid <%=t.bordercolor%>;
}
div#blogs div#navigation ul li a {
  padding-left: 0.5em;
  padding-right: 0.5em;
  display: block;
  float: left;
  padding-bottom: 2px;
  border-bottom: 1px solid <%=t.bordercolor%>;
}
div#blogs div#navigation ul li a:hover {
  background-color: blue;
  color: yellow;
  text-decoration: none;
}
div#blogs div#content_box { /* this is where the main content goes */
  position: relative;
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  padding-top: 0.6em;
  padding-left: 1em;
  padding-right: 1em;
  overflow: auto;
}
div#blogs div.breadcrumbs,
div#blogs div.breadcrumbs_bottom {
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 0.5em;
  margin-top: 0.5em;
  margin-bottom: 1em;
  top: 0.4em;
  clear: both;
}
div#blogs div.breadcrumbs span.current_page,
div#blogs div.breadcrumbs_bottom span.current_page {
  font-weight: bold;
}
div#blogs div.primary {
  overflow: auto;
  width: 100%;
}
#blogs div.content_box {
  background: none;
  border: none;
  padding: 0;
}
#blog-header {
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
  overflow: auto;
}
#blog-header img.avatar {
  max-height: 85px;
  max-width: 85px;
}
#blog-header div.header-image {
  float: left;
  margin: 0.5em;
  /* padding: 2px; */
  border: 1px solid <%=t.bordercolor%>;
}
#blog-header div.header-text {
  float: left;
  margin: 0.5em 0.5em 1em 0.5em;
}
#blog-header h1 {
  margin-top: 0;
  margin-bottom: 0;
}
li.blog_post h2,
li.blog_comment h2 {
  margin-top: 0;
  margin-bottom: 0;
}
li.blog_post div.author,
li.blog_comment div.author {
  font-style: italic;
  text-align: right;
  margin-right: 2em;
  margin-top: 2em;
}
li.blog_post div.permalink,
li.blog_comment div.permalink {
  font-style: italic;
  text-align: right;
  margin-right: 2em;
}
li.blog_post div.author span.author,
li.blog_comment div.author span.author {
  font-weight: bold;
}
#blog-header div.author {
  font-style: italic;
}
#blog-header div.description {
  margin-top: 1em;
}
div#blogs ul#category_list {
  margin: 0 0 0 1.5em;
  padding: 0;
}
div#blogs div#blog h3 {
  font-size: 18px;
}
div#blogs div#blog ul#blog_post_list {
  list-style: none;
  margin: 2em 0 2em 0;
  padding: 0;
}
div#blogs div#blog li.blog_post {
  margin-bottom: 1em;
  padding: 0.5em 0.5em 1.5em 0.5em;
  background-color: <%=t.altbg2%>;
  border: 1px solid <%=t.bordercolor%>;
}
div#blogs div#blog li.blog_post div.categories {
  font-size: 10px;
  display: none; /* XXX */
}
div#blogs div#blog li div.text {
  margin: 1.5em 0 0.5em 0;
  max-width: 60em;
}
div#blogs ul#blog_list {
  margin: 1em 0 2em 0;
  padding: 0;
  list-style: none;
}
div#blogs ul#blog_list li.blog h4 {
  margin: 0.5em 0 0.5em 0;
  padding: 0;
}
div#blogs ul.comment_list {
  list-style: none;
  margin: 1em 0 0 0;
  padding: 0;
}
div#blogs li.blog_comment {
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  margin: 1em;
  padding: 0 1em 1em 1em;
}
form.new_blog_post fieldset {
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  margin: 1em 0 1em 0;
}
form.new_blog_comment fieldset {
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg1%>;
  margin: 1em;
}
form.new_blog_post fieldset textarea,
form.new_blog_comment fieldset textarea {
  width: 100%;
}

/* NEW USER SPECIFIC */
div#rules {
  background-color: <%=t.altbg1%>;
  border: 1px solid <%=t.bordercolor%>;
  padding: 1em;
}
form#new_user div.submit,
div#rules-accept {
  margin: 2em;
  text-align: center;
}
form#new_user fieldset {
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg2%>;
}
form#new_user fieldset legend {
  border: 1px solid <%=t.bordercolor%>;
  background-color: <%=t.altbg2%>;
  padding: 0.3em 0.7em;
}
form#new_user dl {
  overflow: auto;
}
form#new_user dt {
  float: left;
  width: 10em;
  clear: left;
}
div.errors {
  margin-top: 1em;
  margin-bottom: 1em;
  border: 1px solid red;
  background-color: #ffc0c0;
  padding: 1em;
}
div.errors ul {
  margin-left: 2em;
}
.errors strong {
  color: red;
}
div.ok {
  margin-top: 1em;
  margin-bottom: 1em;
  border: 1px solid green;
  background-color: #c0ffc0;
  padding: 1em;
