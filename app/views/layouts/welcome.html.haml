          %ul
            %li= link_to 'home', root_path
            %li= link_to 'forum', forum_path(:id => 25)
            %li= link_to 'bacheche', forum_path(:id => 51)
        =render :partial => '/common/flashes'

      .main_body
        =yield

      .footer
        =render :partial => '/users/online'

    =render :partial => '/common/google_analytics'
