/* files }}} */
/* music database {{{ */
  #mdb_albums { /* {{{ */
    margin-top: 6px;
    margin-left: <%=sidemargin%>;
    margin-right: <%=sidemargin%>;
    margin-bottom: 6px;
  } /* }}} */
  table.mdb_albums { /* {{{ */
    background-color: <%=theme.bordercolor%>;
    font-family: <%=theme.font%>;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
  } /* }}} */
  td.mdb_albums { /* {{{ */
    font-family: <%=theme.font%>;
    font-size: <%=theme.fontsize%>;
    padding: .3em;
    background-color: <%=theme.altbg1%>; /* XXX */
  } /* }}} */
  .mdb_albums_header { /* {{{ */
    font-family: <%=theme.font%>;
    background-color: <%=theme.header%>;
    color: <%=theme.headertext%>;
    font-size: <%=theme.altfontsize%>;
    font-weight: bold;
    padding: .3em;
  } /* }}} */
/* music database }}} */
/* general {{{*/
  .spacer { /* {{{ */
    clear: both;
  } /* }}} */
  img { /* {{{ */
    border: 0px;
  } /* }}} */
  a { /* {{{ */
    text-decoration: none;
    color: <%=theme.link%>;
  } /* }}} */
  a:visited { /* {{{ */
    text-decoration: none;
    color: <%=theme.link%>;
  } /* }}} */
  a:hover { /* {{{ */
    text-decoration: underline;
  } /* }}} */
  a.menuhl { /* {{{ */
    color: <%=theme.headertext%>;
  } /* }}} */
  a.menuhl:visited { /* {{{ */
    color: <%=theme.headertext%>;
  } /* }}} */
/* general }}} */
  .deleted_bg1 { /* {{{ */
    background-color: <%=dimmer(theme.altbg1, 80)%>;
  } /* }}} */
  .deleted_bg2 { /* {{{ */
    background-color: <%=dimmer(theme.altbg2, 80)%>;
  } /* }}} */
  span.author { /* {{{ */
    font-weight: bold;
  } /* }}} */
  span.menuhl { /* {{{ */
    background-color: <%=theme.header%>;
    color: <%=theme.headertext%>;
    padding-left: 0.3em;
    padding-right: 0.3em;
  } /* }}} */
  span.curpage { /* {{{ */
    background-color: <%=theme.header%>;
    color: <%=theme.headertext%>;
    padding-left: 0.3em;
    padding-right: 0.3em;
  } /* }}} */
  div.menuhl { /* {{{ */
    background-color: <%=theme.header%>;
    color: <%=theme.headertext%>;
    font-size: <%=theme.altfontsize%>;
    padding-left: <%=theme.tablespace%>px;
    padding-right: <%=theme.tablespace%>px;
  } /* }}} */
<% end %>
