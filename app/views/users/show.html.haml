-same_user = @shown_user == @user

#user_profile{ :class => domid(@shown_user) }
  -tabbed_content do |box|
    -box.content_wrapper    = 'user_profile_content'
    -box.navigation_wrapper = 'user_profile_tabs'
    -box.tab("Profilo", user_path(@shown_user, :tab => :profile), { :method => :get }, { :class => '' })
    -box.tab("Messaggi scritti", user_posts_path(@shown_user), { :method => :get }, { :class => '' })
    -box.tab("Risposte ricevute", user_path(@shown_user, :tab => :replies), { :method => :get }, { :class => '' })    if same_user
    -box.tab("Notifiche", user_notifications_path(@shown_user), { :method => :get }, { :class => '' })      if same_user
    -box.tab("Backup", user_path(@shown_user, :tab => :backup), { :method => :get }, { :class => '' })                if same_user
    -box.tab("Cancellazione account", user_path(@shown_user, :tab => :delete), { :method => :get }, { :class => '' }) if same_user
    -box.content = capture do
      =render :partial => 'profile'
