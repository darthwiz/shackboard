#user_profile{ :class => domid(@shown_user) }
  -if @shown_user.can_edit?(@user)
    .edit_link
      %a{ :href => edit_user_path(@shown_user) } Modifica profilo
  %ul
    %li.username
      %dl
        -# username / reg_date / status / online / email / www / aim / icq / yahoo / msn / location / birthday / bio / pm / search
        %dt Nome utente:
        %dd= cleanup(@shown_user.username)

    %li.registration_date
      %dl
        %dt Registratro il:
        %dd= Time.at(@shown_user.created_at).strftime("%d/%m/%Y")

    %li.status
      %dl
        %dt Status:
        %dd= status_list(@shown_user)

    %li.online
      %dl
        %dt Online:
        %dd= @shown_user.online? ? 'sÃ¬' : 'no'

    -unless @shown_user.location.blank?
      %li.location
        %dl
          %dt Corso di laurea:
          %dd= @shown_user.location

    -unless @shown_user.website.blank?
      %li.website
        %dl
          %dt Sito web:
          %dd= link_to(@shown_user.website, @shown_user.website, :target => '_blank')

    -unless @shown_user.msn.blank?
      %li.msn
        %dl
          %dt MSN:
          %dd= @shown_user.msn

    -unless @shown_user.icq.blank?
      %li.icq
        %dl
          %dt ICQ:
          %dd= @shown_user.icq

    -unless @shown_user.yahoo.blank?
      %li.yahoo
        %dl
          %dt Yahoo:
          %dd= @shown_user.yahoo

    -unless @shown_user.bio.blank?
      %li.bio
        %dl
          %dt Bio:
          %dd= cleanup(@shown_user.bio).gsub("\n", "<br />\n") # TODO BB would be nice here


-unless @latest_replies.blank?
  #latest_replies{ :class => domid(@shown_user) }
    %h3 Le ultime risposte ai tuoi messaggi:
    .list
      %ul.latest_replies
        -@latest_replies.each do |p|
          %li
            =link_to(cleanup(p.user.username), p.user)
            in
            =link_to(cleanup(p.topic.title), p.topic)
            il
            =link_to(p.created_at.strftime("%d/%m/%Y, %H.%M"), p)
