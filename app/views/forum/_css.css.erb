<% t = Theme.find_by_name(@theme_name) || Theme.new %>
/* Theme: <%=t.name.inspect if t%> */
<%=render :partial => '/layouts/main_css', :locals => { :t => t } %>
<%=render :partial => '/users/login_box_css', :locals => { :t => t } %>
div.online_users {<%#{{{%>
  margin-top: .5em;
  margin-bottom: .5em;
  margin-left: 2em;
  margin-right: 2em;
}<%#}}}%>
div#forums, div#topics {<%#{{{%>
  margin-left: 2em;
  margin-right: 2em;
  margin-top: .5em;
  margin-bottom: 2em;
}<%#}}}%>
div#navbar_top {<%#{{{%>
  margin-left: 2em;
  margin-right: 2em;
  margin-top: .5em;
  margin-bottom: .5em;
  font-size: .9em;
}<%#}}}%>
span.page_trail {<%#{{{%>
  display: block;
  font-size: .8em;
}<%#}}}%>
div#navbar_bottom {<%#{{{%>
  margin-left: 2em;
  margin-right: 2em;
  margin-top: .5em;
  margin-bottom: .5em;
}<%#}}}%>
div#forum_name {<%#{{{%>
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  padding: .5em;
  border: 1px solid <%=t.bordercolor%>;
  margin-top: .9em;
  margin-bottom: .5em;
}<%#}}}%>
div#forum_name a {<%#{{{%>
  color: <%=t.headertext%>;
}<%#}}}%>
div#forum_name span.forum_name {<%#{{{%>
  font-weight: bold;
  float: left;
}<%#}}}%>
div.title_bar {<%#{{{%>
  padding: .5em;
  background-color: <%=t.header%>;
  border: 1px solid <%=t.bordercolor%>;
  margin-top: .5em;
  margin-bottom: .5em;
}<%#}}}%>
div.title_bar div.forum_name {<%#{{{%>
  float: left;
}<%#}}}%>
div.title_bar div.pages {<%#{{{%>
  float: left;
  margin-left: 1em;
}<%#}}}%>
span.topic_new {<%#{{{%>
  float: right;
}<%#}}}%>
div.title_bar span.page_trail span.current_page {<%#{{{%>
  display: none;
}<%#}}}%>
div.title_bar div.forum_name span.forum_name {<%#{{{%>
  color: <%=t.headertext%>;
  font-weight: bold;
  font-size: 1em;
}<%#}}}%>
table#topic_list, table#forum_list {<%#{{{%>
  width: 100%;
  background-color: <%=t.bordercolor%>;
  border-collapse: separate;
  border-spacing: 1px 1px;
}<%#}}}%>
td {<%#{{{%>
  padding: .3em;
}<%#}}}%>
td h2, td h3 {<%#{{{%>
  margin: 0;
  font-size: 12px;
}<%#}}}%>
td h3 {<%#{{{%>
  display: inline;
}<%#}}}%>
tr#topic_list_labels td, tr#forum_list_labels td {<%#{{{%>
  background-color: <%=t.header%>;
  color: <%=t.headertext%>;
  font-weight: bold;
}<%#}}}%>
td.topic_folder, td.topic_title, td.topic_posts, td.topic_lastpost, <%#{{{%>
td.forum_name, td.forum_posts, td.forum_mods
{
  background-color: <%=t.altbg2%>;
  color: <%=t.text%>;
}<%#}}}%>
td.topic_icon, td.topic_author, td.topic_views, <%#{{{%>
td.forum_folder, td.forum_topics, td.forum_lastpost
{
  background-color: <%=t.altbg1%>;
  color: <%=t.text%>;
}<%#}}}%>
td.topic_posts, td.topic_views, <%#{{{%>
td.forum_topics, td.forum_posts, td.forum_mods
{
  vertical-align: middle;
  text-align: center;
}<%#}}}%>
td.topic_lastpost, td.forum_lastpost {<%#{{{%>
  font-size: 11px;
  text-align: right;
  padding-right: 1.2em;
}<%#}}}%>
td.forum_folder, td.topic_icon, td.topic_folder {<%#{{{%>
  vertical-align: middle;
  text-align: center;
  padding-left: .5em;
  padding-right: .5em;
}<%#}}}%>
td.topic_title {<%#{{{%>
  width: 60%;
}<%#}}}%>
div.pageseq {<%#{{{%>
  float: right;
  font-size: 10px;
}<%#}}}%>
div.snippet {<%#{{{%>
  font-size: 10px;
  overflow: hidden;
}<%#}}}%>
div#navbar_top span.topic_new, div#navbar_bottom span.topic_new {<%#{{{%>
  text-align: right;
  display: block;
  font-weight: bold;
}<%#}}}%>
a, a:visited {<%#{{{%>
  color: <%=t.link%>;
  text-decoration: none;
}<%#}}}%>
a:hover {<%#{{{%>
  text-decoration: underline;
}<%#}}}%>
div.spacer {<%#{{{%>
  clear: both;
}<%#}}}%>
