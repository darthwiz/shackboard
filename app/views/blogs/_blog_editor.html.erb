<%# vim: set ft=eruby nowrap: -%>
<%remote_form_for blog, :update => domid(blog) do |f|%>
  <fieldset>
    <div>
      Titolo: <%=f.text_field :name, :value => blog.name%>
    </div>
    <div>
      URL: <%=blog_list_url(:username => @user.username)%>/<%=f.text_field :label, :value => blog.label%>
    </div>
    <div>
      <%=f.text_area :description, :value => blog.description%>
    </div>
    <div>
      <%=f.hidden_field :id, :value => blog.id%>
      <%=f.submit 'Salva'%>
    </div>
  </fieldset>
<%end%>
