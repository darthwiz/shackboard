.topic[@topic]
  .title
    %h1= cleanup(@topic.title)
    -if @page_seq_opts[:current].to_i > 1
      %span.page_number
        ="(pagina #{@page_seq_opts[:current] / @opts[:ppp] + 1})"
  %ul.posts
    -@posts.each do |post|
      %li.post[post]
        %a(name="#{domid(post)}")
        -if post == @posts.try(:last)
          %a(name="last_post")
        =render :partial => '/posts/post', :locals => { :post => post, :can_post => @topic.can_post?(@user), :can_moderate => @topic.can_moderate?(@user) }
