- smileys = @announcement.user ? @announcement.user.smileys : []
#announcement
  %h1= cleanup(@announcement.title)
  .text
    =BbText.new(@announcement.message, smileys).to_html(:controller => self)
  -if @announcement.user
    .author
      pubblicato da
      =link_to(@announcement.user.username, @announcement.user)
      ="il #{@announcement.time.strftime('%d/%m/%Y')} alle #{@announcement.time.strftime('%H.%M')}"
